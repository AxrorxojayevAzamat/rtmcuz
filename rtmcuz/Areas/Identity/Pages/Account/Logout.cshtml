@page
@model LogoutModel
@{
    Layout = "_LayoutDashboard";
    ViewData["Title"] = "Log out";
}

<header style="padding: 30px">
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <p>Вы действительно хотите выйти?</p>
                <div class="d-flex justify-content-between" style="width: 130px">
                    <button type="submit" class="nav-link btn btn-danger text-white">Да</button>
                    <a href="javascript:history.back()" class="nav-link btn btn-success text-white d-inline">Нет</a>
                </div>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
</header>
