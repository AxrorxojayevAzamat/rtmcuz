@model IEnumerable<rtmcuz.Data.Models.Section>

<h1>@dashboardLocalizer["Index"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">@dashboardLocalizer["Create_New"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subtitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subtitle)
                </td>
                <td>
                    @Html.Raw(item.Content)
                </td>
                <td>
                    @if(item.Image != null)
                    {
                        <a href="~/uploads/@item.Image.Path" target="_blank" class="attachment-name">@item.Image.OriginName</a>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">@dashboardLocalizer["Edit"]</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">@dashboardLocalizer["Details"]</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">@dashboardLocalizer["Delete"]</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
@await Html.PartialAsync("Pagination", Model)